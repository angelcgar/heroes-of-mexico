---
export interface Props {
  id: string;
  name: string;
  era: string;
  years: string;
  image: string;
  shortBio: string;
  biography: string;
}

const { id, name, era, years, image, shortBio, biography } = Astro.props;
---

<article class="hero-card">
  <div class="aspect-[3/4] overflow-hidden">
    <img 
      src={image} 
      alt={name} 
      class="w-full h-full object-cover transition-transform duration-500 hover:scale-110"
      loading="lazy"
    />
  </div>
  <div class="p-6">
    <div class="mb-2">
      <span class="inline-block px-3 py-1 text-xs rounded-full bg-mexico-green/10 text-mexico-green font-poppins">
        {era}
      </span>
    </div>
    <h3 class="text-xl font-bold mb-2 text-mexico-red">{name}</h3>
    <p class="text-sm text-gray-600 mb-1">{years}</p>
    <p class="text-gray-700 mb-4 line-clamp-3">{shortBio}</p>
    <button 
      class="read-more-btn btn-primary text-sm w-full"
      data-id={id}
      data-hero={JSON.stringify({ name, era, years, image, biography })}
    >
      Leer m√°s
    </button>
  </div>
</article>