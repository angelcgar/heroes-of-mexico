<section id="inicio" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Video de fondo -->
  <div class="absolute inset-0 w-full h-full z-0">
    <video 
      class="object-cover w-full h-full" 
      autoplay 
      muted 
      loop 
      playsinline
      poster="/images/mexico-landscapes-poster.jpg"
    >
      <source src="/videos/mexico-landscapes.mp4" type="video/mp4">
      <!-- Fallback para navegadores que no soportan video -->
      <img src="/images/mexico-landscapes-poster.jpg" alt="Paisajes de México" class="object-cover w-full h-full">
    </video>
    <!-- Overlay para mejorar legibilidad del texto -->
    <div class="absolute inset-0 bg-black/50 z-10"></div>
  </div>
  
  <!-- Contenido del hero -->
  <div class="container mx-auto px-4 relative z-20 text-center">
    <div class="max-w-4xl mx-auto">
      <h1 class="hero-title mb-6">
        ¡Que viva México, <br />
        <span class="text-mexico-red">y sus héroes!</span>
      </h1>
      <p class="text-white text-xl md:text-2xl mb-8 font-noto">
        Un recorrido por la historia de quienes forjaron nuestra nación
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#timeline" class="btn-primary">Explorar Línea del Tiempo</a>
        <a href="#galeria" class="btn-secondary">Ver Galería de Héroes</a>
      </div>
    </div>
  </div>
  
  <!-- Decoración: Silueta de águila estilizada -->
  <div class="absolute bottom-0 left-0 right-0 z-10 pointer-events-none">
    <svg width="100%" height="120" viewBox="0 0 1200 120" preserveAspectRatio="none" class="fill-mexico-green/20">
      <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"></path>
    </svg>
  </div>
</section>